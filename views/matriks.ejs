<div class="container mt-5">
  <h1>Matriks</h1>

  <table class="table table-bordered mt-5">
    <thead class="bg-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Alternatif</th>
        <% for (let i=0; i < kriteria.length; i++) { %>
          <th scope="col" class="text-center">
            <%= kriteria[i].kriteria %>
          </th>
        <% } %>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <% for (let i=0; i < matriks.length; i++) { %>
        <tr>
          <th scope="row">
            <%= matriks[i].alternatif %>
          </th>
          <td>
            <%= alternatif[i].keterangan %>
          </td>
          <% for (let j=1; j <= kriteria.length; j++) { %>
            <td class="text-center" style="width: 8%;">
              <%= matriks[i]['C'+j] %>
            </td>
          <% } %>
          <td class="text-center">
            <button type="button" class="btn badge badge-warning btn-show-edit" data-toggle="collapse" data-target="#rowEdit<%= matriks[i].id %>" aria-expanded="false" aria-controls="rowEdit<%= matriks[i].id %>">
              Ubah
            </button>
          </td>
        </tr>

        <tr class="collapse collapse-row" id="rowEdit<%= matriks[i].id %>">
          <td colspan="2" class="text-center py-4" style="background-color: #ffe28c;">
            <h4 class="m-0">Edit</h4>
          </td>
          <form action="/matriks/edit/<%= matriks[i].id %>" method="post">
            <input type="hidden" name="alternatif" value="<%= matriks[i].alternatif %>">
            <% for (let j=1; j <= kriteria.length; j++) { %>
              <td class="text-center py-4" style="width: 8%;">
                <input type="number" class="form-control" min="1" name="<%= 'c'+j %>" value="<%= matriks[i]['C'+j] %>" required>
              </td>
            <% } %>
            <td class="text-center py-4" style="vertical-align: middle;">
              <button type="submit" class="btn btn-sm btn-block btn-primary" id="<%= matriks[i].id %>">
                Kirim
              </button>
            </td>
          </form>
        </tr>

      <% } %>
    </tbody>
  </table>

</div>